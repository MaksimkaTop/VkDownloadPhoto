<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentStart="false"
        android:layout_marginStart="49dp"
        android:layout_marginTop="75dp"
        android:id="@+id/fillName"
        android:hint="@string/name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/fillName"
        android:layout_alignStart="@+id/fillName"
        android:layout_marginTop="36dp"
        android:id="@+id/fillPassword"
        android:hint="@string/password" />

    <Button
        android:text="@string/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fillPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="69dp"
        android:layout_marginTop="34dp"
        android:id="@+id/button"
        android:onClick="download"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_enter_data"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorMessage"
        android:textSize="24sp"
        android:layout_alignParentTop="false"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circle"
        app:srcCompat="@drawable/oval"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"/>

</LinearLayout>